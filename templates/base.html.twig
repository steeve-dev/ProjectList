<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body
    class="body-header-image
    {% if app.user.theme %}
    image-desk
    {% else %}
    image-default
    {% endif %}
">
<header>
    <div
    class="header-menu">
        <a
                href="{{ path('homePage') }}"
                class="header-menu-company"
        >My company</a>
        <nav
        class="header-nav">

            <ul
            class="header-nav-ul">
                <li>Inscription</li>
                {% if app.user %}
                    <li>Bonjour <a href="{{ path('accountPage', {'id': app.user.id}) }}">{{ app.user.username }}</a></li>
                    <li><a href="{{ path('ListPage') }}">Gestion de listes</a></li>
                    <li>
                        <a href="{{ path('app_logout') }}">Deconnexion</a></li>
                {% else %}
                    <li>
                    <a href="{{ path('app_register') }}">Inscription</a></li>
                    <a href="{{ path('app_login') }}">Connexion</a>
                {% endif %}
            </ul>
        </nav>
        
    </div>
</header>
        {% block body %}{% endblock %}
    </body>
</html>
